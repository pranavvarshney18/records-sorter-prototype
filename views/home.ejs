<link rel="stylesheet" href="/css/home.css">

<h1> <%= title %> Page</h1>

<form action="/create-record" method="POST">
    <input type="text" name="name" placeholder="Enter Name Of Record" required><br>
    <input type="date" name="date"><br>
    <textarea name="info" id="info" name="info" cols="30" rows="2"></textarea><br>
    <br><br>
    <button type="submit">Create</button>
</form>


<div id="record-list">
    <h2>Records</h2>
    <ul>
        <% for(let i of record_list){ %>
            <li>
                <p> <%= i.name %> </p>
                <p> <%= i.date %> </p>
                <p> <%= i.info %> </p>
                <!-- add id -->
                <!-- <p> <%= i.id %> </p> -->
            </li>
        <% } %>
    </ul>
</div>
